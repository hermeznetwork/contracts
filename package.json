{
  "name": "hermez-contracts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "npx hardhat clean && rm -rf cache coverage build node_modules yarn.lock coverage.json .openzeppelin",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test test/*/*.test.js",
    "test:math": "npx hardhat test test/math/*.test.js",
    "test:hermez": "npx hardhat test test/hermez/*.test.js",
    "test:auction": "npx hardhat test test/auction/*.test.js",
    "test:upgradability": "npx hardhat test test/upgradability/*.test.js",
    "test:withdrawalDelayer": "npx hardhat test test/withdrawalDelayer/*.test.js",
    "test:gas": "scripts/run-gas-reporter.sh",
    "test:gas:hermez": "scripts/run-gas-reporter.sh test/hermez/*test.js test/hermez/.solcover.js",
    "test:gas:math": "scripts/run-gas-reporter.sh \"test/math/*.test.js\" \"test/math/.solcover.js\"",
    "test:gas:auction": "scripts/run-gas-reporter.sh \"test/auction/*.test.js\" \"test/auction/.solcover.js\"",
    "test:gas:withdrawalDelayer": "scripts/run-gas-reporter.sh test/withdrawalDelayer/*.test.js test/withdrawalDelayer/.solcover.js",
    "test:coverage": "npx hardhat coverage --network coverage",
    "test:coverage:math": "npx hardhat coverage --testfiles 'test/math/*.test.js' --solcoverjs test/math/.solcover.js --network coverage",
    "test:coverage:hermez": "npx hardhat coverage --testfiles 'test/hermez/*.test.js' --solcoverjs test/hermez/.solcover.js --network coverage",
    "test:coverage:auction": "npx hardhat coverage --testfiles 'test/auction/*.test.js' --solcoverjs test/auction/.solcover.js --network coverage",
    "test:coverage:withdrawalDelayer": "npx hardhat coverage --testfiles 'test/withdrawalDelayer/*.test.js' --solcoverjs test/withdrawalDelayer/.solcover.js --network coverage",
    "lint:sol": "yarn run solhint contracts/*/*.sol"
  },
  "keywords": [],
  "author": "",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "3.1.0",
    "@openzeppelin/contracts-upgradeable": "3.2.0",
    "@openzeppelin/hardhat-upgrades": "^1.6.0",
    "@openzeppelin/test-helpers": "^0.5.6",
    "chai": "^4.3.0",
    "circom": "^0.5.17",
    "circomlib": "^0.5.0",
    "dotenv": "^8.2.0",
    "eth-gas-reporter": "^0.2.17",
    "ethereum-waffle": "^3.2.2",
    "ethers": "^5.0.30",
    "ffjavascript": "^0.2.10",
    "hardhat": "^2.5.0",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "mocha": "^8.1.1",
    "prettier": "^2.0.5",
    "prettier-plugin-solidity": "1.0.0-alpha.56",
    "solc": "0.6.12",
    "solhint": "^3.2.0",
    "solidity-coverage": "^0.7.14",
    "solidity-docgen": "^0.5.4",
    "web3": "^1.3.4"
  },
  "dependencies": {
    "@hermeznetwork/commonjs": "git://github.com/hermeznetwork/commonjs.git#master",
    "@hermeznetwork/commonjsV1": "git://github.com/hermeznetwork/commonjs.git#feature/upgrade-v1",
    "axios": "^0.21.1",
    "readline": "^1.3.0",
    "snarkjs": "^0.4.6"
  }
}
